mixin button({ theme, size, state, themeHeader, hasIcon, link, text, isButton, type })
  -
    let mainClasses = '';
    type = type ? type : '';
    const themeSetting = ['border', 'active-border', 'icon-link'];
    const sizeSetting = ['large', 'small', 'small-border'];
    const stateSetting = ['active', 'active-border', 'icon-link-active'];

    if(themeSetting.includes(theme)) mainClasses += ' button_theme_' + theme;
    if(sizeSetting.includes(size)) mainClasses += ' button_size_' + size;
    if(stateSetting.includes(state)) mainClasses += ' button_' + state;

  if (isButton)
    button.button(class=mainClasses, href=link, type=type)= text
      if (hasIcon)
        i.button__icon arrow_forward
  else
    a.button(class=mainClasses, href=link)= text
      if (hasIcon)
        i.button__icon arrow_forward
