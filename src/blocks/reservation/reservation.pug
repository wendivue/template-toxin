include ../price-list/price-list.pug
include ../date-picker/date-picker.pug
include ../dropdown/dropdown.pug
include ../button/button.pug

mixin reservation({ number, price, link, itemsList })
  form.reservation(action=link)
    .reservation__wrapper-head
      .reservation__items-number
        p.reservation__number.reservation__number--small №
          span.reservation__number.reservation__number--big= number
          span.reservation__number.reservation__number--primary-color люкс
      .reservation__items-price
        span.reservation__price= price
        p.reservation__days в сутки
    .reservation__date-picker
      +date-picker({ text: 'прибытие', placeholder: '19.08.2019', state: 'date', name: 'arrival', type: 'text', id: 'start', iconText: 'expand_more', isDateRange: true, isDateStart: true })
      +date-picker({ text: "выезд", placeholder: '23.08.2019', state: 'date', name: 'departure', type: 'text', id: 'end', iconText: 'expand_more', isDateRange: true, isDateEnd: true })
    .reservation__dropdown
      +dropdown({ text: 'гости', name: 'people', value: '3 гостя', id: 'dropdown', iconText: 'expand_more', isItemsPeople: true, isButtonMenu: true, isDropdown: true, itemsList })
    .reservation__price-list
      +price-list({ itemList: [ {description: '9 990₽ х 4 суток', price: '39 960'}, {description: 'Сбор за услуги: скидка 2 179₽', price: '0', icon: true}, {description: 'Сбор за дополнительные услуги', price: '300', icon: true} ], description: 'Итого', price: '38 081' })
    .reservation__button
      +button({ text: 'забронировать', isButtonLarge: true, isButton: true, type: 'submit' })
