include ../price-list/price-list.pug
include ../date-picker/date-picker.pug
include ../dropdown/dropdown.pug
include ../button/button.pug

mixin reservation({ number, price, link, itemsList })
  form.reservation(action=link)
    .reservation__wrapper-head
      .reservation__items-number
        p.reservation__number.reservation__number_small №
          span.reservation__number.reservation__number_big= number
          span.reservation__number.reservation__number_primary-color люкс
      .reservation__items-price
        span.reservation__price= price
        p.reservation__days в сутки
    .reservation__date-picker
      +date-picker({ text: ['прибытие', 'выезд'], placeholder: ['19.08.2019', '23.08.2019'], name: ['arrival', 'departure'], type: 'text', id: ['start2', 'end2'], iconText: 'expand_more', isDateRange: true })
    .reservation__dropdown
      +dropdown({ text: 'гости', name: 'people', value: '3 гостя', id: 'dropdown', iconText: 'expand_more', isItemsPeople: true, isButtonMenu: true, isDropdown: true, itemsList })
    .reservation__price-list
      +price-list({ itemList: [ {description: '9 990₽ х 4 суток', price: '39 960'}, {description: 'Сбор за услуги: скидка 2 179₽', price: '0', size: 'large', isIcon: true}, {description: 'Сбор за доп. услуги', size: 'large', price: '300', isIcon: true} ], description: 'Итого', price: '38 081' })
    .reservation__button
      +button({ text: 'забронировать', size: 'large', isIcon: true, isButton: true, type: 'submit' })
