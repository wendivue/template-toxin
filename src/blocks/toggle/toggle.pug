mixin toggle({ id, text, name, isChecked })
  - id = id ? "toggle-" + id : "";

  .toggle
    if (isChecked)
      input.toggle__input(id=id, name=name, type='checkbox', checked)
    else
      input.toggle__input(id=id, name=name, type='checkbox')

    label.toggle__label(for=id)
    label.toggle__text(for=id)= text
