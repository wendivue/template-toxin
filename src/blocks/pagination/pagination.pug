mixin pagination(object)

    .pagination
        for item in object.itemList
            if(item.currentPage)
                a(class="pagination__number pagination__number--current" href=item.link)=item.text
            else
                a(class="pagination__number" href=item.link)=item.text

        a(class="pagination__next-page" href=object.nextPage) arrow_forward

    p(class="pagination__text")=object.text