mixin pagination({ itemsOnPage = 12, items, currentPage = 1, text })
  -
    const startOfRange = itemsOnPage * (currentPage - 1) + 1;
    const endOfRange = currentPage * itemsOnPage;
    const numberOfItems = items < 100 ? items : '100+';
    const fullText = `${startOfRange} â€“ ${endOfRange} ${text[0]} ${numberOfItems} ${text[1]}`

  .pagination.js-pagination(
    data-items-on-page=itemsOnPage,
    data-items=items,
    data-current-page=currentPage
  )
    ul.pagination__pages.js-pagination__pages
    p.pagination__text= fullText
