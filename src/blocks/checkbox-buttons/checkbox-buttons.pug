mixin checkbox-buttons(object, checkboxButtons)
  .checkbox-buttons
    header.checkbox-buttons__wrapper-header
      h3.checkbox-buttons__title= object.text

    ul.checkbox-buttons__items
      each item in checkboxButtons
        li.checkbox-buttons__wrapper-checkbox
          if (item.isChecked)
            input.checkbox-buttons__checkbox(
              id=item.id ? "checkbox-buttons-" + item.id : "",
              type='checkbox',
              checked
            )
          else
            input.checkbox-buttons__checkbox(
              id=item.id ? "checkbox-buttons-" + item.id : "",
              type='checkbox'
            )

          if (object.isRich)
            .checkbox-buttons__wrapper-text
              p.checkbox-buttons__text= item.title
              label.checkbox-buttons__label.checkbox-buttons__label--small(
                for=item.id ? "checkbox-buttons-" + item.id : ""
              )= item.text
          else
            label.checkbox-buttons__label(for=item.id ? "checkbox-buttons-" + item.id : "")= item.text
