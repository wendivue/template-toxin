mixin checkbox-buttons({ caption, isRich, checkboxButtons })
  .checkbox-buttons
    .checkbox-buttons__wrapper-header
      h3.checkbox-buttons__title= caption

    ul.checkbox-buttons__items
      each item in checkboxButtons
        - let { text, id, title, name, isChecked } = item;
        - id = id ? "checkbox-buttons-" + id : "";
        li.checkbox-buttons__wrapper-checkbox
          if (isChecked)
            input.checkbox-buttons__checkbox(id=id, name=name, type='checkbox', checked)
          else
            input.checkbox-buttons__checkbox(id=id, name=name, type='checkbox')

          if (isRich)
            .checkbox-buttons__wrapper-text
              h3.checkbox-buttons__text= title
              label.checkbox-buttons__label.checkbox-buttons__label--small(for=id)= text
          else
            label.checkbox-buttons__label(for=id)= text
