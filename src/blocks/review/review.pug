include ../like-button/like-button.pug

mixin review({ img, username, date, text, id, number, name, isChecked })
  .review
    .review__wrapper
      img.review__img(src=img)
      .review__wrapper-text
        h3.review__username= username
        p.review__date= date

    .review__wrapper
      .review__like-button
        +like-button({ id, number, name, isChecked })
      p.review__text= text
