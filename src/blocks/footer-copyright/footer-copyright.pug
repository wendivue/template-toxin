include ../page/page.pug
include ../center-block/center-block.pug
include ../text-field/text-field.pug

mixin footer-copyright({ linkLogo, textLogo, type='full', list1, list2, list3, titleSub, textSub, img, copyright, iconList, textField })
  if (type === 'full')
    footer.footer-copyright.footer-copyright_full
      +page({})
        +center-block({})
          .footer-copyright__wrapper-logo
            a(href=linkLogo) 
              img.footer-copyright__logo(src=img, alt='logo')
            p.footer-copyright__text-logo= textLogo
          ul.footer-copyright__wrapper-list
            each list in [list1, list2, list3]
              li.footer-copyright__lists
                ul.footer-copyright__list
                  each item in list
                    - const { title, link, text } = item;

                    li.footer-copyright__list-item
                      if (title)
                        h3.footer-copyright__title= title
                      else
                        a.footer-copyright__link(href=link)= text

          .footer-copyright__wrapper-subscribe
            .footer-copyright__wrapper-text
              h3.footer-copyright__title-subscribe= titleSub
              p.footer-copyright__text-subscribe= textSub
            .footer-copyright__subscribe
              +text-field(textField)
      .footer-copyright__bottom-footer
        +page({})
          +center-block({})
            p.footer-copyright__text= copyright
            ul.footer-copyright__social
              each icons in iconList
                - const { link, icon } = icons;
                li.footer-copyright__item
                  a.footer-copyright__link-icon(
                    href=link,
                    target='_blank',
                    rel='noopener noreferrer'
                  )
                    i(class="fa " + icon)
  else if (type === 'creative')
    footer.footer-copyright.footer-copyright_creative
      a(href=linkLogo) 
        img.footer-copyright__logo(src=img, alt='logo')
      .footer-copyright__wrapper-copyright
        p.footer-copyright__text= copyright
      ul.footer-copyright__social.footer-copyright__social_creative
        each item in iconList
          - const { link, icon } = item;
          li.footer-copyright__item
            a.footer-copyright__link-icon(href=link, target='_blank', rel='noopener noreferrer')
              i(class="fa " + icon)
