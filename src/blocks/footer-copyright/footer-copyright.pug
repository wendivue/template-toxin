include ../page/page.pug
include ../centerblock/centerblock.pug
include ../text-field/text-field.pug

mixin footer-copyright(object)
    .footer-copyright
        +page
            +centerblock
                .footer-copyright__wrapper-logo
                    img(class="footer-copyright__logo" src="img/Logo.png")
                    p(class="typo-body footer-copyright__text-logo")=object.textLogo
                .footer-copyright__wrapper-list
                    ul.footer-copyright__list
                        +footer-list(object.itemList1)
                    ul.footer-copyright__list
                        +footer-list(object.itemList2)
                    ul.footer-copyright__list
                        +footer-list(object.itemList3)
                .footer-copyright__wrapper-subscribe
                    .footer-copyright__wrapper-text
                        h3(class="typo-h3 footer-copyright__title-subscribe")=object.titleSub
                        p(class="typo-body footer-copyright__text-subscribe")=object.textSub
                    .footer-copyright__subscribe
                        +text-field({
                            placeholder: "Your email address",
                            tabindex: 5,
                            type: "text",
                            size: "small",
                            iconText: "arrow_forward",
                            classNameIcon: "submit"
                        })
        .footer-copyright__bottom-footer
            +page
                +centerblock
                    p(class="typo-body footer-copyright__text")=object.copyright
                    div(class="footer-copyright__social")
                        <i class="fa fa-twitter footer-copyright__icon"></i>
                        <i class="fa fa-facebook-square footer-copyright__icon"></i>
                        <i class="fa fa-instagram footer-copyright__icon"></i>

mixin footer-list(object)
    for item in object
        li(class="footer-copyright__list-item")
            if(item.title)
                h3(class="typo-h3 footer-copyright__title")=item.title
            else
                a(class="typo-body footer-copyright__link" href=item.link)=item.text