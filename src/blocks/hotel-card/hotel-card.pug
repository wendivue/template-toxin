include ../rate-button/rate-button.pug

mixin hotel-card({ number, itemList, price, isLux, link, reviews, star })
  - const altText = "image-люкс-" + number;

  .hotel-card
    .hotel-card__slider
      ul.owl-carousel.owl-theme.js-owl-carousel
        each item in itemList
          li.hotel-card__item
            a.hotel-card__link(href=link)
              img.hotel-card__img(src=item.img, alt=altText)

    .hotel-card__description
      .hotel-card__wrapper-head
        .hotel-card__items-number
          p.hotel-card__number.hotel-card__number--small №
            span.hotel-card__number.hotel-card__number--big= number
            if (isLux)
              span.hotel-card__number.hotel-card__number--primary-color люкс
        .hotel-card__items-price
          span.hotel-card__text.hotel-card__text--bold= price
          p.hotel-card__text в сутки

      .hotel-card__wrapper-reviews
        .hotel-card__rate-button
          +rate-button({ star })
        .hotel-card__reviews
          span.hotel-card__text.hotel-card__text--bold= reviews
          p.hotel-card__text Отзывов
