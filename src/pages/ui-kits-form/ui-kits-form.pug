extends ../../layout/main-layout.pug

block variables
  include ../../blocks/col-4/col-4.pug
  include ../../blocks/text-field/text-field.pug
  include ../../blocks/dropdown/dropdown.pug
  include ../../blocks/date-picker/date-picker.pug
  include ../../blocks/checkbox-list/checkbox-list.pug
  include ../../blocks/icon-text-list/icon-text-list.pug
  include ../../blocks/checkbox-buttons/checkbox-buttons.pug
  include ../../blocks/radio-buttons/radio-buttons.pug
  include ../../blocks/toggle/toggle.pug
  include ../../blocks/like-button/like-button.pug
  include ../../blocks/rate-button/rate-button.pug
  include ../../blocks/range-slider/range-slider.pug
  include ../../blocks/button/button.pug
  include ../../blocks/pagination/pagination.pug
  include ../../blocks/bullet-list/bullet-list.pug
  include ../../blocks/review/review.pug

  - const pageTitle = "Form Elements";
  - const classMain = "ui-kits-form";
  - const classImg = "ui-kits-form__img";
  - const checkboxList = [{text: 'Завтрак', id: '1'},{text: 'Письменный стол', id: '2', isChecked: true},{text: 'Стул для кормления', id: '3', isChecked: true},{text: 'Кроватка', id: '4', isChecked: true},{text: 'Телевизор', id: '5'},{text: 'Шампунь', id: '6'},{text: 'Телевизор', id: '7'},{text: 'Шампунь', id: '8'}];
  - const checkboxButtons1 = [{text: 'Ширина коридоров в номере не менее 91 см.', id: '4', title: 'Широкий коридор'}, {text: 'На 1 этаже вас встретит специалист и проводит до номера.', id: '5', title: 'Помощник для инвалидов'}];
  - const checkboxButtons2 = [{text: 'Можно курить', id: '1'}, {text: 'Можно с питомцами', id: '2', isChecked: true}, {text: 'Можно пригласить гостей (до 10 человек)', id: '3', isChecked: true}];
  - const itemsRoom = [{text: 'спальни', value: '2', tabindex: 2}, {text: 'кровати', value: '2', tabindex: 3}, {text: 'ванные комнаты', value: '0', tabindex: 4}];
  - const itemsPeople = [{text: 'взрослые', value: '2', tabindex: 2}, {text: 'дети', value: '1', tabindex: 3}, {text: 'младенцы', value: '0', tabindex: 4}];
  - const itemsPeopleNull = [{text: 'взрослые', value: '0', tabindex: 2}, {text: 'дети', value: '0', tabindex: 3}, {text: 'младенцы', value: '0', tabindex: 4}];
  - const iconList = [{ icon: "insert_emoticon", title: "Комфорт", text: "Шумопоглощающие стены", theme: "border" }, { icon: "location_city", title: "Удобство", text: "Окно в каждой из спален", theme: "border" }];
  - const radioButtonsList = [{text: 'Мужчина', value: 'male', name: 'gender', isChecked: true}, {text: 'Женщина', name: 'gender', value: 'female'}];
  - const rangeConfig = { dataMin: 0, dataMax: 15500, dataFrom: 5000, dataTo: 10000 };

block content
  +page
    +center-block
      +col-4
        .ui-kits-form__text-field
          +text-field({ text: 'Text Field', value: 'Email', tabindex: 1, type: 'text', textState:'Default' })
        .ui-kits-form__text-field-hover
          +text-field({ text: 'Text Field', placeholder: 'This is pretty awesome', tabindex: 2, state: 'active', textState:'Hover / Focus' })
        .ui-kits-form__dropdown
          +dropdown({ text: 'Dropdown', value: 'Сколько гостей', iconText: 'expand_more', className: 'dropdown-people', textState:'Default', tabindex: 3, isButtonMenu: true, isDropdown: true, itemsList: itemsPeople })
        .ui-kits-form__masked
          +date-picker({ text: 'masked text field', placeholder: 'ДД.ММ.ГГГГ', type: 'text', textState:'Default', className: 'datepicker datepicker-here' })
        .ui-kits-form__date-picker
          +date-picker({ text: 'date Dropdown', placeholder: 'ДД.ММ.ГГГГ', state: 'date', type: 'text', className: 'datepicker-start', myId: 'start', tabindex: 1, iconText: 'expand_more', isDateRange: true })
          +date-picker({ text: 'date Dropdown', placeholder: '19.08.2019', state: 'date', type: 'text', className: 'datepicker-end', myId: 'end', iconText: 'expand_more', tabindex: 4 })
        .ui-kits-form__filter-date
          +date-picker({ text: 'filter date dropdown', placeholder: '19 авг - 23 авг', type: 'text', size: 'small', iconText: 'expand_more', isDateRange: true })
        .ui-kits-form__subscription
          +text-field({ text: 'subscription text field', placeholder: 'Email', tabindex: 5, type: 'text', size: 'small', iconText: 'arrow_forward', classNameIcon: 'submit' })
        .ui-kits-form__dropdown-room
          +dropdown({ text: 'Dropdown', value: '2 спальни 2 кровати...', iconText: 'expand_more', textState:'Default', className: 'dropdown', size:'small', tabindex: 6, isItemsRoom: true, isDropdown: true, itemsList: itemsPeople })
        .ui-kits-form__dropdown-room-expanded
          +dropdown({ text: 'Dropdown', value: '2 спальни 2 кровати...', iconText: 'expand_more', textState:'expanded', className: 'dropdown', size:'small', tabindex: 7, isItemsRoom: true, stateMenu: 'active', isDropdown: true, itemsList: itemsRoom })
        .ui-kits-form__checkbox-list
          +checkbox-list({ text: 'expandable checkbox list', checkboxList })
        .ui-kits-form__checkbox-list-open
          +checkbox-list({ text: 'expandable checkbox list', state: 'open', checkboxList })
      +col-4
        +checkbox-buttons({ caption: 'Checkbox Buttons', checkboxButtons: checkboxButtons2 })
        .ui-kits-form__radio-buttons
          h3.ui-kits-form__title.ui-kits-form__title--radio-button Radio Buttons
          +radio-buttons({radioButtonsList})
        .ui-kits-form__toggle
          h3.ui-kits-form__title Toggle
          .ui-kits-form__toggle-item
            +toggle({ title:'Toggle', text: 'Получать спецпредложения', isChecked: true, id: '1' })
          .ui-kits-form__toggle-item
            +toggle({ title:'Toggle', text: 'Получать спецпредложения', id: '2' })
        .ui-kits-form__like-button
          h3.ui-kits-form__title.ui-kits-form__title--like-button like button
          .ui-kits-form__like-button-items
            .ui-kits-form__like-button-item
              +like-button({ number: '2', id: '1' })
            .ui-kits-form__like-button-item
              +like-button({ number: '12', id: '2', isChecked: true })
        .ui-kits-form__rate-button
          h3.ui-kits-form__title rate button
          .ui-kits-form__rate-button-items
            .ui-kits-form__rate-button-item
              +rate-button({star: 4})
            .ui-kits-form__rate-button-item
              +rate-button({star: 5})
        .ui-kits-form__dropdown-people
          +dropdown({ text: 'dropdown', value: 'Сколько гостей', iconText: 'expand_more', className: 'dropdown-people', tabindex: 8, isButtonMenu: true, isDropdown: true, stateMenu: 'active', itemsList: itemsPeopleNull })
        .ui-kits-form__rich-checkbox-buttons
          +checkbox-buttons({ caption: 'Rich Checkbox Buttons', isRich: true, checkboxButtons: checkboxButtons1 })
      +col-4
        +range-slider({text: 'Range Slider', rangeConfig})
        .ui-kits-form__buttons
          h3.ui-kits-form__title buttons
          .ui-kits-form__buttons-items
            .ui-kits-form__buttons-item
              +button({ text: 'CLICK ME', link: '/mock-address/change-me' })
            .ui-kits-form__buttons-item
              +button({ text: 'CLICK ME', link: '/mock-address/change-me', state: 'active' })
          .ui-kits-form__buttons-items
            .ui-kits-form__buttons-item
              +button({ text: 'CLICK ME', link: '/mock-address/change-me', theme: 'border' })
            .ui-kits-form__buttons-item
              +button({ text: 'CLICK ME', link: '/mock-address/change-me', theme: 'border', state: 'active' })
          .ui-kits-form__buttons-items
            .ui-kits-form__buttons-item
              +button({ text: 'CLICK ME', link: '/mock-address/change-me', theme: 'icon-link' })
            .ui-kits-form__buttons-item
              +button({ text: 'CLICK ME', link: '/mock-address/change-me', theme: 'icon-link', state: 'icon-link-active' })
          +button({ text: 'перейти к оплате', link: '/mock-address/change-me', isButtonLarge: true })
        .ui-kits-form__pagination
          h3.ui-kits-form__title pagination
          +pagination({ itemList: [ {text: '1', link: '/mock-address/change-me', isCurrentPage: true}, {text: '2', link: '/mock-address/change-me'}, {text: '3', link: '/mock-address/change-me'}, {text: '...'}, {text: '15', link: '/mock-address/change-me'} ], nextPage: '/mock-address/change-me', text: '1 – 12 из 100+ вариантов аренды' })
        .ui-kits-form__dropdown-people-expanded
          +dropdown({ text: 'dropdown', value: '3 гостя', iconText: 'expand_more', className: 'dropdown-people', tabindex: 9, isButtonMenu: true, isDropdown: true, stateMenu: 'active', itemsList: itemsPeople})
        .ui-kits-form__bullet-list
          h3.ui-kits-form__title bullet list
          +bullet-list({ itemList: [ {text: 'Нельзя с питомцами'}, {text: 'Без вечеринок и мероприятий '}, {text: 'Время прибытия — после 13:00, а выезд до 12:00'} ] })
  +page
    +center-block
      .ui-kits-form__col-8
        +icon-text-list({iconList})
        .ui-kits-form__review
          +review({ img: 'img/image.png', username: 'Мурад Сарафанов', date: '5 дней назад', text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.', number: '12', id: 'review-1', isChecked: true })
