block content
  aside.search-room__sidebar
    .search-room__date-picker
      +date-picker({ text: 'даты пребывания в отеле', placeholder: '19 авг - 23 авг', type: 'text', name: 'date', id: 'date', size: 'small', isDateRange: true })
    .search-room__dropdown
      +dropdown({ text: 'гости', value: '3 гостя, 1 младенец', iconText: 'expand_more', size: 'small', id: 'dropdown-people', isItemsPeople: true, isButtonMenu: true, isDropdown: true, itemsList: itemsPeople })
    .search-room__range-slider
      +range-slider({ text: 'диапазон цены', rangeConfig })
    p.search-room__text-range-slider Стоимость за сутки пребывания в номере
    .search-room__checkbox-buttons
      +checkbox-buttons({ caption: 'Правила дома', checkboxButtons: checkboxButtons })
    .search-room__rich
      +checkbox-buttons({ caption: 'доступность', isRich: true, checkboxButtons: checkboxButtonsRich })
    .search-room__dropdown-room
      +dropdown({ text: 'удобства номера', value: '2 спальни, 2 кровати', id: 'dropdown-room', iconText: 'expand_more', size:'small', isItemsRoom: true, isDropdown: true, itemsList: itemsRoom })
    .search-room__checkbox-list
      +checkbox-list({ text: 'дополнительные удобства', checkboxList })

  article.search-room__content
    h1.search-room__title Номера, которые мы для вас подобрали
    ul.search-room__wrapper-hotel-card
      each item in hotelCards
        - const { number, itemList, price, isLux, link, reviews, star } = item;
        li.search-room__hotel-card
          +hotel-card({number, itemList, price, isLux, link, reviews, star})

    .search-room__pagination
      +pagination({ itemList: [ {text: '1', link: '/mock-address/change-me', isCurrentPage: true}, {text: '2', link: '/mock-address/change-me'}, {text: '3', link: '/mock-address/change-me'}, {text: '...'}, {text: '15', link: '/mock-address/change-me'} ], nextPage: '/mock-address/change-me', text: '1 – 12 из 100+ вариантов аренды' })
