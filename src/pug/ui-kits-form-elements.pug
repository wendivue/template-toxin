include ./include/doctype.pug

include ../blocks/ui-kits-form/ui-kits-form.pug
include ../blocks/page/page.pug
include ../blocks/centerblock/centerblock.pug
include ../blocks/col-4/col-4.pug
include ../blocks/text-field/text-field.pug
include ../blocks/dropdown/dropdown.pug
include ../blocks/date-picker/date-picker.pug
include ../blocks/checkbox-list/checkbox-list.pug
include ../blocks/icon-text-list/icon-text-list.pug
include ../blocks/checkbox-buttons/checkbox-buttons.pug
include ../blocks/radio-buttons/radio-buttons.pug
include ../blocks/toggle/toggle.pug
include ../blocks/like-button/like-button.pug
include ../blocks/rate-button/rate-button.pug
include ../blocks/range-slider/range-slider.pug
include ../blocks/button/button.pug
include ../blocks/pagination/pagination.pug
include ../blocks/bullet-list/bullet-list.pug
include ../blocks/review/review.pug

+doctype({title: "Form Elements"})
img.ui-kits-form__img(src="img/Group.png")
+ui-kits-form
    +page
        +centerblock
            +col-4
                .ui-kits-form__text-field
                    +text-field({
                        text: "Text Field",
                        value: "Email",
                        tabindex: 1,
                        type: "text",
                        textState:"Default"
                    })
                .ui-kits-form__text-field-hover
                    +text-field({
                        text: "Text Field",
                        placeholder: "This is pretty awesome",
                        tabindex: 2, state: "active",
                        textState:"Hover / Focus"
                    })
                .ui-kits-form__dropdown
                    +dropdown({
                        text: "Dropdown",
                        value: "Сколько гостей",
                        iconText: "expand_more",
                        className: "dropdown-people",
                        textState:"Default",
                        tabindex: 3,
                        itemsPeople: true,
                        buttonMenu: true,
                        dropdown: true 
                    })
                .ui-kits-form__masked
                    +date-picker({
                        text: "masked text field",
                        placeholder: "ДД.ММ.ГГГГ",
                        type: "text",
                        textState:"Default",
                        className: "datepicker datepicker-here"
                    })
                .ui-kits-form__date-picker
                    +date-picker({
                        text: "date Dropdown",
                        placeholder: "ДД.ММ.ГГГГ",
                        state: "date",
                        type: "text",
                        className: "datepicker-start",
                        myId: "start", tabindex: 1,
                        iconText: "expand_more",
                        dateRange: true
                    })
                    +date-picker({
                        text: "date Dropdown",
                        placeholder: "19.08.2019",
                        state: "date",
                        type: "text",
                        className: "datepicker-end",
                        myId: "end",
                        iconText: "expand_more",
                        tabindex: 4
                    })
                .ui-kits-form__filter-date
                    +date-picker({
                        text: "filter date dropdown",
                        placeholder: "19 авг - 23 авг",
                        type: "text",
                        size: "small",
                        iconText: "expand_more",
                        dateRange: true
                    })
                .ui-kits-form__subscription
                    +text-field({
                        text: "subscription text field",
                        placeholder: "Email",
                        tabindex: 5,
                        type: "text",
                        size: "small",
                        iconText: "arrow_forward",
                        classNameIcon: "submit"
                    })
                .ui-kits-form__dropdown-room
                    +dropdown({
                        text: "Dropdown",
                        value: "2 спальни 2 кровати...",
                        iconText: "expand_more",
                        textState:"Default",
                        className: "dropdown",
                        size:"small",
                        tabindex: 6,
                        itemsRoom: true,
                        dropdown: true
                    })
                .ui-kits-form__dropdown-room-expanded
                    +dropdown({
                        text: "Dropdown",
                        value: "2 спальни 2 кровати...",
                        iconText: "expand_more",
                        textState:"expanded",
                        className: "dropdown",
                        size:"small",
                        tabindex: 7,
                        itemsRoom: true,
                        stateMenu: "active",
                        dropdown: true
                    })
                .ui-kits-form__checkbox-list
                    +checkbox-list({
                        text: "expandable checkbox list"
                    })
                .ui-kits-form__checkbox-list-open
                    +checkbox-list({
                        text: "expandable checkbox list",
                        state: "open"
                    })
            +col-4
                +checkbox-buttons({text: "Checkbox Buttons"})
                .ui-kits-form__radio-buttons
                    h3.typo-h3.ui-kits-form__title.ui-kits-form__title--radio-button Radio Buttons
                    +radio-buttons({text: "Radio Buttons"})
                .ui-kits-form__toggle
                    h3.typo-h3.ui-kits-form__title Toggle
                    .ui-kits-form__toggle-item
                        +toggle({
                            title:"Toggle",
                            text: "Получать спецпредложения",
                            checked: "true",
                            id: "1"
                        })
                    .ui-kits-form__toggle-item
                        +toggle({
                            title:"Toggle",
                            text: "Получать спецпредложения",
                            id: "2"
                        })
                .ui-kits-form__like-button
                    h3.typo-h3.ui-kits-form__title.ui-kits-form__title--like-button like button
                    .ui-kits-form__like-button-items
                        .ui-kits-form__like-button-item
                            +like-button({
                                number: "2",
                                id: "1"
                            })
                        .ui-kits-form__like-button-item
                            +like-button({
                                number: "12",
                                id: "2",
                                checked: "true"
                            })
                .ui-kits-form__rate-button
                    h3.typo-h3.ui-kits-form__title rate button
                    .ui-kits-form__rate-button-items
                        .ui-kits-form__rate-button-item
                            +rate-button({star: 4})
                        .ui-kits-form__rate-button-item
                            +rate-button({star: 5})
                .ui-kits-form__dropdown-people
                    +dropdown({
                        text: "dropdown",
                        value: "Сколько гостей",
                        iconText: "expand_more",
                        className: "dropdown-people",
                        tabindex: 8,
                        itemsPeople: true,
                        buttonMenu: true,
                        dropdown: true,
                        nullPeople: true,
                        stateMenu: "active" 
                    })
                .ui-kits-form__rich-checkbox-buttons
                +checkbox-buttons({
                    text: "Rich Checkbox Buttons",
                    rich: "true"
                })
            +col-4
                +range-slider({text: "Range Slider"})
                .ui-kits-form__buttons
                    h3.typo-h3.ui-kits-form__title buttons
                    .ui-kits-form__buttons-items
                        .ui-kits-form__buttons-item
                            +button({
                                text: "CLICK ME",
                                link: "/mock-address/change-me"
                            })
                        .ui-kits-form__buttons-item
                            +button({
                                text: "CLICK ME",
                                link: "/mock-address/change-me",
                                state: "active"
                            })
                    .ui-kits-form__buttons-items
                        .ui-kits-form__buttons-item
                            +button({
                                text: "CLICK ME",
                                link: "/mock-address/change-me",
                                theme: "border"
                            })
                        .ui-kits-form__buttons-item
                            +button({
                                text: "CLICK ME",
                                link: "/mock-address/change-me",
                                theme: "border",
                                state: "active"
                            })
                    .ui-kits-form__buttons-items
                        +button({
                            text: "CLICK ME",
                            link: "/mock-address/change-me",
                            theme: "icon-link"
                        })
                        +button({
                            text: "CLICK ME",
                            link: "/mock-address/change-me",
                            theme: "icon-link",
                            state: "icon-link-active"
                        })
                    +button({
                        text: "перейти к оплате",
                        link: "/mock-address/change-me",
                        buttonLarge: "true"
                    })
                .ui-kits-form__pagination
                    h3.typo-h3.ui-kits-form__title pagination
                    +pagination({
                        itemList: [
                            {text: "1", link: "/mock-address/change-me", currentPage: true},
                            {text: "2", link: "/mock-address/change-me"},
                            {text: "3", link: "/mock-address/change-me"},
                            {text: "..."},
                            {text: "15", link: "/mock-address/change-me"}
                        ],
                        nextPage: "/mock-address/change-me", 
                        text: "1 – 12 из 100+ вариантов аренды"
                    })
                .ui-kits-form__dropdown-people-expanded
                    +dropdown({
                        text: "dropdown",
                        value: "3 гостя",
                        iconText: "expand_more",
                        className: "dropdown-people",
                        tabindex: 9,
                        itemsPeople: true,
                        buttonMenu: true,
                        dropdown: true,
                        stateMenu: "active"
                    })
                .ui-kits-form__bullet-list
                    h3.typo-h3.ui-kits-form__title bullet list
                    +bullet-list({
                        itemList: [
                            {text: "Нельзя с питомцами"},
                            {text: "Без вечеринок и мероприятий "},
                            {text: "Время прибытия — после 13:00, а выезд до 12:00"}
                        ]
                    })
    +page
        +centerblock
            .ui-kits-form__col-8
                +icon-text-list({})
                .ui-kits-form__review
                    +review({
                        img: "img/image.png", 
                        username: "Мурад Сарафанов", 
                        date: "5 дней назад", 
                        text: "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.",
                        number: "12", 
                        id: "review-1", 
                        checked: "true"
                    })