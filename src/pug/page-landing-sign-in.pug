include ../blocks/landing-sign-in/landing-sign-in.pug
include ../blocks/header/header.pug
include ../blocks/sign-in/sign-in.pug
include ../blocks/footer-copyright/footer-copyright.pug

+doctype({title: "Sign in"})
+landing-sign-in
    .landing-sign-in__header
        +header({
            itemList: [
                {text: "О нас", link: "/mock-address/change-me"},
                {text: "Услуги", link: "/mock-address/change-me", icon: "true", subItemList: "true"},
                {text: "Вакансии", link: "/mock-address/change-me"},
                {text: "Новости", link: "/mock-address/change-me"},
                {text: "Соглашения", link: "/mock-address/change-me", icon: "true", subItemList2: "true"}
            ],
            loginButton: {
                text: "войти",
                link: "page-landing-sign-in.html",
                theme: "border",
                size: "login"
            },
            registerButton: {
                text: "зарегистрироваться",
                link: "page-landing-registration.html",
                size: "register"
            },
            subItemList1: [
                {text: "бронирование", link: "/mock-address/change-me"},
                {text: "съем квартиры", link: "/mock-address/change-me"},
                {text: "продажа квартиры", link: "/mock-address/change-me"}
            ],
            subItemList2: [
                {text: "правила", link: "/mock-address/change-me"},
                {text: "договор", link: "/mock-address/change-me"}
            ]
        })

    .landing-sign-in__content
        +page
            +centerblock
                .landing-sign-in__sign-in
                    +sign-in({
                        title: "войти",
                        link: "/mock-address/change-me"
                    })

    .landing-sign-in__footer-copyright
        +footer-copyright({
            textLogo: "Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»",
            placeholder: "Email",
            itemList1: [
                {title: "навигация"},
                {text: "О нас", link: "/mock-address/change-me"},
                {text: "Новости", link: "/mock-address/change-me"},
                {text: "Служба поддержки", link: "/mock-address/change-me"},
                {text: "Услуги", link: "/mock-address/change-me"}
            ],
            itemList2: [
                {title: "о нас"},
                {text: "О сервисе", link: "/mock-address/change-me"},
                {text: "Наша команда", link: "/mock-address/change-me"},
                {text: "Вакансии", link: "/mock-address/change-me"},
                {text: "Инвесторы", link: "/mock-address/change-me"}
            ],
            itemList3: [
                {title: "Служба поддержки"},
                {text: "Соглашения", link: "/mock-address/change-me"},
                {text: "Сообщества", link: "/mock-address/change-me"},
                {text: "Связь с нами", link: "/mock-address/change-me"}
