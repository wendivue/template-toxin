{
  "env": {
    "browser": true,
    "es2021": true,
    "jquery": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "class-methods-use-this": "off",
    "import/no-unresolved": "off",
    "import/prefer-default-export": "off"
  },
  "ignorePatterns": [
    "webpack.base.config.js",
    "webpack.production.config.js",
    "webpack.development.config.js"
  ]
}
